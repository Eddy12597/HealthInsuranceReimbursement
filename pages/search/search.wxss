/* 查询页面样式 */
.container {
  padding: 40rpx;
  font-size: 40rpx;
  color: #000;
  background: #fff;
}
/* 药品选择器样式 */
.picker {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #f5f5f5;
  margin: 20rpx 0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
}
/* 结果展示区域样式 */
.result-box {
  background: #f9f9f9;
  padding: 30rpx;
  border-radius: 10rpx;
  margin: 40rpx 0;
}
/* 结果标题样式 */
.result-title {
  font-size: 40rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}
/* 结果值样式 */
.result-value {
  font-size: 48rpx;
  color: #2196F3;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}
/* 结果描述样式 */
.result-desc {
  font-size: 36rpx;
  color: #333;
  line-height: 1.5;
}
/* 收藏按钮样式 */
.fav-btn {
  height: 100rpx;
  line-height: 100rpx;
  background: #FF9800;
  color: white;
  margin: 30rpx 0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 40rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.search-section {
    position: relative;
    margin-bottom: 20rpx;
  }
  
  .search-input {
    width: 514rpx;
    height: 80rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
  }
  
  .suggestions {
    position: absolute;
    width: 514rpx;
    max-height: 400rpx;
    overflow-y: auto;
    background: #fff;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
    z-index: 100;
  }
  
  .suggestion-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .suggestion-item:last-child {
    border-bottom: none;
  }
  
  .suggestion-item:active {
    background-color: #f5f5f5;
  }