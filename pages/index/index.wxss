/* 首页样式 */
.container {
  padding: 40rpx;
  font-size: 40rpx;
  color: #000;
  background: #fff;
}
/* 标题样式 */
.title {
  font-size: 60rpx;
  text-align: center;
  margin-bottom: 60rpx;
}
/* 导航按钮样式 */
.nav-btn {
  display: block;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: #4CAF50;
  color: white;
  margin: 30rpx 0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 40rpx;
}
