/* VARIABLES */
page {
    --main-green: #4CAF50;
    --menu-border-radius: 10rpx; 
}


/* 首页样式 */
.container {
  padding: 40rpx;
  font-size: 40rpx;
  color: #000;
  background: #fff;
}
/* 标题样式 */
.title {
  font-size: 60rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 用户登录区域样式 */
.user-section {
  width: 80%;
  margin: 30rpx auto 40rpx auto;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: var(--main-green);
  padding: 0rpx;
  text-align: center;
}

/* Center login prompt content */
/* .login-prompt and .login-text removed for nav-btn style login */

/* Make login button same width as nav-btn */
.login-btn {
  background: var(--main-green);
  color: white;
  border: none;
  border-radius: 0rpx;
  padding: 0;
  font-size: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0;
  box-sizing: border-box;
  font-weight: normal;
}

.user-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    box-sizing: border-box;
    width: 100%;
}
  

.avatar {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    flex-shrink: 0;
}
  
