.user-details {
    flex: 1;
    min-width: 0;
    font-size: 30rpx;
    color: white;
    word-break: break-word;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}



/* Style for logged-in status to match nav-btn */
.status-btn {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: var(--main-green);
  color: white;
  border-radius: var(--main-border-radius);
  text-align: center;
  font-size: 30rpx;
  margin-top: 8rpx;
}

/* Make logout button narrower and text normal */
.logout-btn {
    /* Box Model & Layout */
    display: inline-block;
    width: auto;
    min-width: 130rpx;
    height: 70rpx;
    min-height: 60rpx;
    margin-left: 20rpx;
    box-sizing: border-box;

    /* Background & Borders */
    background: white;
    border: none;
    border-radius: 8rpx;

    /* Text & Font */
    color: var(--main-green);
    font-size: 36rpx;
    line-height: 60rpx;

    /* Spacing & Padding */
    padding: 0 20rpx;
}
  



/* 导航按钮样式 */
.nav-btn {
  display: block;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: #4CAF50;
  color: white;
  margin: 30rpx 0;
  border-radius: var(--menu-border-radius);
  text-align: center;
  font-size: 40rpx;
}
