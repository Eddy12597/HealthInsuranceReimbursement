/* 首页样式 */
.container {
  padding: 40rpx;
  font-size: 40rpx;
  color: #000;
  background: #fff;
}
/* 标题样式 */
.title {
  font-size: 60rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 用户登录区域样式 */
/* Make user-section look like nav-btn */
/* Make user-section align with nav-btns, but allow content inside to stack */
.user-section {
  width: 80%;
  margin: 30rpx auto 40rpx auto;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #4CAF50;
  padding: 0rpx;
  text-align: center;
}

/* Center login prompt content */
/* .login-prompt and .login-text removed for nav-btn style login */

/* Make login button same width as nav-btn */
.login-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 0rpx;
  padding: 0;
  font-size: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0;
  box-sizing: border-box;
  font-weight: normal;
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status {
  display: block;
  font-size: 28rpx;
  color: #07c160;
  margin-top: 8rpx;
}

.logout-btn {
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

/* 导航按钮样式 */
.nav-btn {
  display: block;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: #4CAF50;
  color: white;
  margin: 30rpx 0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 40rpx;
}
